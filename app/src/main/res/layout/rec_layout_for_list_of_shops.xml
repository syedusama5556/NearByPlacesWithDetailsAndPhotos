<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:elevation="5dp"
    android:id="@+id/rec_cardview"
    app:cardCornerRadius="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp">

        <ImageView
            android:id="@+id/rec_img"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_launcher" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/rec_img"
            >
            <TextView
                android:id="@+id/rec_name"
                style="@style/TextAppearance.AppCompat.Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="rec_name"/>
            <TextView
                android:id="@+id/rec_vicinity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="rec_vicinity"/>
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Service : Vulcanizing"/>
            <TextView
                android:id="@+id/rec_formatted_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="rec_formatted_address"/>
            <TextView
                android:id="@+id/rec_formatted_phone_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="rec_formatted_phone_number"/>

            <TextView
                android:id="@+id/rec_opening_hours"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="rec_opening_hours"/>

            <TextView
                android:id="@+id/rec_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="rec_rating"/>

            <TextView
                android:id="@+id/rec_price_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Payment Method"/>


        </LinearLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>


